{
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[json]": {
    "editor.rulers": [
      148
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 148
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 99
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.renderControlCharacters": true,
    "editor.rulers": [
      99
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 99
  },
  "accessibility.signals.lineHasBreakpoint": {
    "sound": "off"
  },
  "accessibility.signals.lineHasError": {
    "sound": "off"
  },
  "accessibility.signals.lineHasFoldedArea": {
    "sound": "off"
  },
  "accessibility.signals.lineHasInlineSuggestion": {
    "sound": "off"
  },
  "accessibility.signals.noInlayHints": {
    "sound": "off"
  },
  "accessibility.signals.onDebugBreak": {
    "sound": "off"
  },
  "accessibility.signals.taskCompleted": {
    "sound": "off"
  },
  "accessibility.signals.taskFailed": {
    "sound": "off"
  },
  "accessibility.signals.terminalQuickFix": {
    "sound": "off"
  },
  "autoDocstring.docstringFormat": "numpy",
  "black-formatter.args": [
    "--config",
    "${workspaceFolder}/pyproject.toml"
  ],
  "editor.accessibilitySupport": "off",
  "editor.foldingStrategy": "indentation",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "meta.function-call.generic.python",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "string.quoted.docstring.multi.python",
        "settings": {
          "foreground": "#CE9178"
        }
      }
    ]
  },
  "explorer.sortOrder": "type",
  "files.associations": {
    "*.env": "env",
    "*.env_settings": "env",
    "dvc.lock": "yaml",
    "poetry.lock": "toml"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.dvc": true,
    "**/.git": true,
    "**/.venv": false
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.dvc/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.venv/*/**": true
  },
  "isort.args": [
    "--settings-file=${workspaceFolder}/pyproject.toml",
    "--settings-path=${workspaceFolder}/pyproject.toml"
  ],
  "markdown.extension.toc.updateOnSave": false,
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    ".",
    "-p",
    "test_*.py"
  ],
  // "python.testing.unittestEnabled": true,
  // "ruff.lint.args": [
  //   "--config",
  //   "${workspaceFolder}/pyproject.toml"
  // ],
  // "search.exclude": {
  //   "**/.venv": true
  // },
  "python.testing.unittestEnabled": true,
  "ruff.lintConfigPath": "${workspaceFolder}/pyproject.toml",  // New setting for configuration file
  "search.exclude": {
    "**/.venv": true
  },
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Default Dark+",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.startupEditor": "none",
  "accessibility.signalOptions.volume": 0
}
